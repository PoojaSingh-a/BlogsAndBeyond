<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registeration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="sm:overflow-hidden">
        <div class="header p-5 text-white text-2xl flex justify-center bg-black">
            Registeration
        </div>
        <div class="mt-1 bg-blue-300 min-h-screen flex justify-center relative p-2">
            <form id="registerForm" action="/createUserr" method="POST" class="bg-white p-5 rounded-lg shadow-lg w-full sm:w-1/3 h-full mt-20">
    <h2 class="text-2xl font-bold mb-6 text-center">Create an Account</h2>
    <div class="mb-4">
        <label for="username" class="block text-gray-700 font-medium mb-1" required>Username</label>
        <input type="text" id="username" name="username" class="w-full border border-gray-300 rounded-md p-2 ">
    </div>
    <div class="mb-4">
        <label for="email" class="block text-gray-700 font-medium mb-1" required>Email</label>
        <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded-md p-2 ">
    </div>
    <div class="mb-4">
        <label for="password" class="block text-gray-700 font-medium mb-1" required>Password</label>
        <input type="password" id="password" name="password" class="w-full border border-gray-300 rounded-md p-2 ">
    </div>
    <div class="mb-4">
        <label for="age" class="block text-gray-700 font-medium mb-1" required>Age</label>
        <input type="number" id="age" name="age" class="w-full border border-gray-300 rounded-md p-2 ">
    </div>
    <button type="button" class="w-full bg-black text-white font-bold py-2 px-4 rounded hover:bg-yellow-600" onclick="check()">Register</button>
</form>
        </div>
</body>
<script>
    function check(){
        event.preventDefault()

        if(document.getElementById("username").value == "" || document.getElementById("email").value == "" || document.getElementById("age").value == ""){
            window.alert("Fields can't be empty!")
            return
        }
        const pass = document.getElementById("password").value
        const specialChar = ['!','@','#','$','%','^','&','*','(',')','_']
        if(pass.length <= 8){
            window.alert("Password should be longer than 8 characters")    
        }

        let containSpecialChar = false
        for(let char of specialChar){
            if(pass.includes(char)){
            containSpecialChar = true
            break
            }
        }

        if(!containSpecialChar){
            window.alert("Password must contain at least one special character")
            return
        }

        document.getElementById("registerForm").submit()            
    }
</script>
</html>